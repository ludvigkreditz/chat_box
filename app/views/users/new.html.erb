<h3 class="ui center aligned medium icon header">
  <i class="circular purple hourglass half icon"></i>
  You need to register. 😁   
</h3>


<div class="ui placeholder segment">
  <div class="ui four column very relaxed stackable grid">
    <div class="column" style="margin: 0 auto;">
      <%= render 'shared/errors' %>
      <%= form_for(:user, html: { class: "ui form" }, url:users_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Create a Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Create a Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Sign Up", class: "ui purple submit button" %>
      <% end %>
    </div>
  </div>
</div>

