<h2 class="ui center aligned large header">
  Welcome to MessageMe - <em>a complete Chat App</em>
</h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular purple power off tiny icon"></i>
  Log in to continue
</h4>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter your Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
         <%= f.label :password, "Password" %>
          <div class="ui left icon input">
          <%= f.password_field :password, placeholder: "enter your Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Log in", class: "ui purple submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <%= link_to '<i class="signup icon"></i>Sign Up'.html_safe, signup_path, class: "ui purple submit button" %>
    </div> 
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>


<h3 class="ui center aligned large header">
Follow the steps to register
</h3> 


<div class="ui center aligned large header">
  <div class="ui ordered steps">
    <div class="completed step">
      <div class="content">
        <div class="title">First</div>
        <div class="description">Push the button <br>  <i class="signup icon"></i>Sign Up </div>
      </div>
    </div>
    <div class="completed step">
      <div class="content">
        <div class="title">Second</div>
        <div class="description">Create a <i class="user icon"></i>username and <br> <i class="lock icon"></i>password</div>
      </div>
    </div>
    <div class="active step">
      <div class="content">
        <div class="title">Finally</div>
        <div class="description">Just register and you can write in <br> the chat of Message Me</div>
      </div>
    </div>
  </div>
</div>

